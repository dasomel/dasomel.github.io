---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const projects = allProjects.filter((p) => !p.slug.endsWith('-en'));
const sortedProjects = projects.sort((a, b) => (a.data.order || 99) - (b.data.order || 99));

const myProjects = sortedProjects.filter((p) => p.data.type === 'own');
const forkProjects = sortedProjects.filter((p) => p.data.type === 'fork');
---

<BaseLayout title="Projects" description="오픈소스 프로젝트">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-16">
    <header class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        <span class="bg-gradient-to-r from-blue-600 to-cyan-500 bg-clip-text text-transparent">Open Source</span> Projects
      </h1>
      <p class="text-lg text-gray-500">
        자체 프로젝트 및 Fork 프로젝트
      </p>
    </header>

    <!-- My Projects -->
    {myProjects.length > 0 && (
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
          <span class="bg-gradient-to-r from-emerald-600 to-teal-500 bg-clip-text text-transparent">My Projects</span>
          <span class="ml-3 text-sm text-gray-400 font-normal">자체 프로젝트</span>
        </h2>
        <div class="space-y-6">
          {myProjects.map((project) => (
        <div class="p-6 bg-gradient-to-br from-gray-50 to-white border border-gray-100 rounded-2xl hover:border-gray-200 hover:shadow-lg transition-all group">
          <div class="flex items-start justify-between mb-4">
            <a href={`/projects/${project.slug}`} class="flex-1">
              <h2 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">{project.data.title}</h2>
            </a>
            <a
              href={project.data.github}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-gray-400 hover:text-gray-900 hover:bg-gray-100 rounded-full transition-all"
              title="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>

          <a href={`/projects/${project.slug}`} class="block">
            <p class="text-gray-500 mb-5">{project.data.description}</p>

            <div class="flex flex-wrap gap-2 mb-4">
              {project.data.tags.map((tag) => (
                <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>

            <div class="flex items-center text-sm text-blue-600 font-medium">
              자세히 보기
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        </div>
      ))}
        </div>
      </section>
    )}

    <!-- Fork Projects -->
    {forkProjects.length > 0 && (
      <section>
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
          <span class="bg-gradient-to-r from-purple-600 to-pink-500 bg-clip-text text-transparent">Fork Projects</span>
          <span class="ml-3 text-sm text-gray-400 font-normal">Fork 프로젝트</span>
        </h2>
        <div class="space-y-6">
          {forkProjects.map((project) => (
            <div class="p-6 bg-gradient-to-br from-gray-50 to-white border border-gray-100 rounded-2xl hover:border-gray-200 hover:shadow-lg transition-all group">
              <div class="flex items-start justify-between mb-4">
                <a href={`/projects/${project.slug}`} class="flex-1">
                  <h2 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">{project.data.title}</h2>
                </a>
                <a
                  href={project.data.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 text-gray-400 hover:text-gray-900 hover:bg-gray-100 rounded-full transition-all"
                  title="GitHub"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              </div>

              <a href={`/projects/${project.slug}`} class="block">
                <p class="text-gray-500 mb-5">{project.data.description}</p>

                <div class="flex flex-wrap gap-2 mb-4">
                  {project.data.tags.map((tag) => (
                    <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>

                <div class="flex items-center text-sm text-blue-600 font-medium">
                  자세히 보기
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            </div>
          ))}
        </div>
      </section>
    )}
  </div>
</BaseLayout>
