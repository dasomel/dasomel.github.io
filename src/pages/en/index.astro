---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .filter((p) => p.slug.endsWith('-en'))
  .sort((a, b) => (a.data.order || 99) - (b.data.order || 99))
  .slice(0, 2);
---

<BaseLayout title="Home" description="Cloud & DevOps Engineer - K-PaaS, Kubernetes, DevOps Technical Blog">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-16">
    <!-- Hero -->
    <section class="text-center mb-20">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
        <span class="bg-gradient-to-r from-blue-600 via-cyan-500 to-teal-500 bg-clip-text text-transparent">Cloud</span> & <span class="bg-gradient-to-r from-purple-600 to-pink-500 bg-clip-text text-transparent">DevOps</span>
        <br class="hidden sm:block" />
        Engineer
      </h1>
      <p class="text-lg sm:text-xl text-gray-500 max-w-xl mx-auto mb-10">
        Building open source projects and leading developer communities
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/en/projects"
          class="px-8 py-3.5 bg-gray-900 text-white font-medium rounded-full hover:bg-gray-800 transition-all hover:scale-105"
        >
          Projects
        </a>
        <a
          href="/en/seminars"
          class="px-8 py-3.5 border-2 border-gray-200 text-gray-700 font-medium rounded-full hover:border-gray-900 hover:bg-gray-50 transition-all"
        >
          Seminars
        </a>
      </div>
    </section>

    <!-- Projects Preview -->
    <section class="mb-20">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-sm font-semibold text-gray-400 uppercase tracking-widest">Projects</h2>
        <a href="/en/projects" class="text-gray-400 hover:text-gray-900 text-sm transition-colors">
          View all â†’
        </a>
      </div>
      <div class="grid md:grid-cols-2 gap-4">
        {projects.map((project) => (
          <div class="p-5 bg-gradient-to-br from-gray-50 to-white border border-gray-100 rounded-2xl hover:border-gray-200 hover:shadow-lg transition-all group">
            <div class="flex items-start justify-between mb-2">
              <a href={`/en/projects/${project.slug.replace(/-en$/, '')}`} class="flex-1">
                <h3 class="font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                  {project.data.title}
                </h3>
              </a>
              <a
                href={project.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="p-1.5 text-gray-400 hover:text-gray-900 hover:bg-gray-100 rounded-full transition-all"
                title="GitHub"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
            <a href={`/en/projects/${project.slug.replace(/-en$/, '')}`}>
              <p class="text-sm text-gray-500">{project.data.description}</p>
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Features -->
    <section class="grid md:grid-cols-3 gap-4 mb-20">
      <div class="p-6 bg-gradient-to-br from-blue-50 to-cyan-50 border border-blue-100 rounded-2xl">
        <div class="w-10 h-10 bg-blue-500 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">OSS</h3>
        <p class="text-gray-500 text-sm">
          Contributing to Harbor, Terraboard
        </p>
      </div>

      <div class="p-6 bg-gradient-to-br from-purple-50 to-pink-50 border border-purple-100 rounded-2xl">
        <div class="w-10 h-10 bg-purple-500 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">K-PaaS Lite</h3>
        <p class="text-gray-500 text-sm">
          Installation guide & operations
        </p>
      </div>

      <div class="p-6 bg-gradient-to-br from-emerald-50 to-teal-50 border border-emerald-100 rounded-2xl">
        <div class="w-10 h-10 bg-emerald-500 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">Community</h3>
        <p class="text-gray-500 text-sm">
          Leading OPA, OPDC communities
        </p>
      </div>
    </section>
  </div>
</BaseLayout>
