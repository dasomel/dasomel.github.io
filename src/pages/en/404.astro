---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-7xl font-bold bg-gradient-to-r from-blue-600 to-cyan-500 bg-clip-text text-transparent mb-4">404</h1>
      <p class="text-xl text-gray-500 mb-8">
        The page you're looking for doesn't exist.
      </p>
      <a
        href="/en"
        class="px-8 py-3.5 bg-gray-900 text-white font-medium rounded-full hover:bg-gray-800 transition-all hover:scale-105"
      >
        Go Home
      </a>
    </div>
  </div>
</BaseLayout>
