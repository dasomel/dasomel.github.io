---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allSeminars = await getCollection('seminars');
const seminars = allSeminars.filter((s) => s.slug.endsWith('-en'));
const sortedSeminars = seminars.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Group by year
const groupedByYear = sortedSeminars.reduce((acc, seminar) => {
  const year = seminar.data.date.getFullYear().toString();
  if (!acc[year]) acc[year] = [];
  acc[year].push(seminar);
  return acc;
}, {} as Record<string, typeof seminars>);

const years = Object.keys(groupedByYear).sort((a, b) => Number(b) - Number(a));
---

<BaseLayout title="Seminars" description="Seminar Presentations">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-16">
    <header class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        <span class="bg-gradient-to-r from-purple-600 to-pink-500 bg-clip-text text-transparent">Seminars</span>
      </h1>
      <p class="text-lg text-gray-500 mb-8">
        Presentations from 2013 to present
      </p>
      <a
        href="https://github.com/dasomel/seminar"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 text-white rounded-full hover:bg-gray-800 transition-all hover:scale-105 text-sm"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
      </a>
    </header>

    <div class="space-y-12">
      {years.map((year) => (
        <section>
          <h2 class="text-sm font-semibold text-gray-400 uppercase tracking-widest mb-4">{year}</h2>
          <div class="space-y-3">
            {groupedByYear[year].map((seminar) => (
              <a
                href={`/en/seminars/${seminar.slug.replace(/-en$/, '')}`}
                class="block p-5 bg-gradient-to-br from-gray-50 to-white border border-gray-100 rounded-2xl hover:border-gray-200 hover:shadow-md transition-all group"
              >
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    <h3 class="font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                      {seminar.data.title}
                    </h3>
                    <p class="text-sm text-gray-400 mt-1">{seminar.data.event}</p>
                    {seminar.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-1.5 mt-3">
                        {seminar.data.tags.slice(0, 3).map((tag) => (
                          <span class="px-2 py-0.5 bg-gray-100 text-gray-500 rounded-full text-xs">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                  <svg class="w-5 h-5 text-gray-300 group-hover:text-blue-500 transition-colors flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>
</BaseLayout>
