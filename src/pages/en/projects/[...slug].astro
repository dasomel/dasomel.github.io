---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects
    .filter((project) => project.slug.endsWith('-en'))
    .map((project) => ({
      params: { slug: project.slug.replace(/-en$/, '') },
      props: { project },
    }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout title={project.data.title} description={project.data.description}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 py-16">
    <header class="mb-10">
      <div class="flex items-center gap-3 mb-4">
        <a
          href="/en/projects"
          class="text-gray-400 hover:text-gray-600 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
        <span class="text-gray-300">|</span>
        <span class="text-sm text-gray-500">Open Source Project</span>
      </div>

      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">{project.data.title}</h1>
      <p class="text-lg text-gray-500 mb-6">{project.data.description}</p>

      <div class="flex flex-wrap gap-2 mb-6">
        {project.data.tags.map((tag) => (
          <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>

      <a
        href={project.data.github}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-5 py-2.5 bg-gray-900 text-white rounded-full hover:bg-gray-800 transition-all hover:scale-105"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
    </header>

    <div class="prose prose-lg prose-gray max-w-none prose-headings:scroll-mt-20 prose-a:text-blue-600 prose-code:bg-gray-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-pink-600 prose-code:before:content-none prose-code:after:content-none prose-pre:p-0 prose-pre:bg-transparent">
      <Content />
    </div>

    <footer class="mt-16 pt-8 border-t border-gray-200">
      <a
        href="/en/projects"
        class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Projects
      </a>
    </footer>
  </article>
</BaseLayout>
