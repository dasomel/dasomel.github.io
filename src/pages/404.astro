---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - 페이지를 찾을 수 없습니다">
  <div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-7xl font-bold bg-gradient-to-r from-purple-600 to-pink-500 bg-clip-text text-transparent mb-4">404</h1>
      <p class="text-xl text-gray-500 mb-8">
        요청하신 페이지를 찾을 수 없습니다
      </p>
      <a
        href="/"
        class="px-8 py-3.5 bg-gray-900 text-white font-medium rounded-full hover:bg-gray-800 transition-all hover:scale-105"
      >
        홈으로
      </a>
    </div>
  </div>
</BaseLayout>
